{
  "name": "price-perfect",
  "version": "9.9.0",
  "private": true,
  "main": "dist/electron/main.js",
  "author": "Price Perfect",
  "description": "24/7 Pyramid Trading Strategy for ETHUSDT on AsterDEX",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:dev:electron\" \"npm:dev:engine\" \"wait-on http://localhost:5173 dist/electron/main.js dist/engine/engine.js && nodemon --watch dist/electron --watch dist/engine --delay 300ms --exec \\\"electron dist/electron/main.js\\\"\"",
    "dev:electron": "tsc -p electron/tsconfig.json --watch",
    "dev:engine": "tsc -p engine/tsconfig.json --watch",
    "build": "vite build && npm run build:electron && npm run build:engine",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:engine": "tsc -p engine/tsconfig.json",
    "start": "electron dist/electron/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dist:win": "npm run build && electron-builder --win --dir",
    "dist:win:portable": "npm run build && electron-builder --win portable"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "bottleneck": "^2.19.5",
    "decimal.js": "^10.4.3",
    "events": "^3.3.0",
    "googleapis": "^170.0.0",
    "lightweight-charts": "^4.2.1",
    "node-fetch": "^2.7.0",
    "p-queue": "^6.6.2",
    "p-retry": "^4.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.9",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.priceperfect.trader",
    "productName": "Price Perfect",
    "directories": {
      "output": "windows-build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": null,
      "artifactName": "PricePerfect-${version}-Win64.exe"
    },
    "portable": {
      "artifactName": "PricePerfect-${version}-Portable.exe"
    }
  }
}
